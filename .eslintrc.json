{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "no-console": "off"
    },
    "overrides": [
        {
          "files": ["*-test.js","*.spec.js", "__tests__/*.spec.js"],
          "rules": {
            "no-unused-expressions": "off"
          }
        }
    ]
}
